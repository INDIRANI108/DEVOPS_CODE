pipeline{
        agent any 
        stages{
            stage('stage1'){
                steps{
                   sh 'echo this is stage1'  
                
              }            
            } 
            stage('stage2'){
                steps{
                   sh '''
                        echo "Hello from stage2 this is git hub `hostname` this"
                    '''               
                }
            }
            stage('stage3'){
                steps{
                   sh '''
                      bash ${WORKSPACE}/linux/script.sh
                }
            }
            
          }
            
        }
